<h1>Articles Listing Page</h1>

<table>
  <tHead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </tHead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to 'Show', article_path(article) %></td>
        <td><%= link_to 'Delete', article_path(article), data: {"turbo-method": :delete } %></td>
      </tr>
    <% end %>
  </tbody>
</table>